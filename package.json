{
  "name": "electron-react-boilerplate",
  "description": "A React boilerplate build on electron.",
  "version": "0.0.0",
  "private": true,
  "main": "dist/background.js",
  "build": {
    "appId": "com.example.electron-react-boilerplate",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "dev:electron": "cross-env NODE_ENV=development electron -r @babel/register ./src/background.js",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "pree2e": "webpack --config=build/webpack.config.prod.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "release": "npm test && webpack --config=build/webpack.config.prod.js --env=production && electron-builder",
    "start": "node build/start.js",
    "test": "npm run unit && npm run e2e",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register"
  },
  "dependencies": {
    "compressorjs": "^1.0.5",
    "fs-jetpack": "^2.2.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "sharp": "^0.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "electron": "^4.1.3",
    "electron-builder": "^20.39.0",
    "electron-mocha": "^6.0.4",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^6.0.2",
    "react-hot-loader": "^4.8.2",
    "source-map-support": "^0.5.11",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  }
}
