{
  "name": "secretary",
  "description": "Wechat secretary",
  "version": "0.1.0",
  "private": true,
  "main": "dist/background.js",
  "build": {
    "appId": "nnecec.secretary",
    "productName": "secretary",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "dev:electron": "cross-env NODE_ENV=development electron -r @babel/register ./src/background.js",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "pree2e": "webpack --config=build/webpack.config.prod.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "release": "cross-env NODE_ENV=production webpack --config=build/webpack.config.prod.js && electron-builder",
    "start": "node build/start.js",
    "test": "npm run unit && npm run e2e",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^16.9.0",
    "@material-ui/core": "^4.4.2",
    "@material-ui/icons": "^4.4.1",
    "@material-ui/lab": "^4.0.0-alpha.14",
    "@rematch/core": "^1.2.0",
    "@rematch/immer": "^1.1.0",
    "@rematch/loading": "^1.1.3",
    "compressorjs": "^1.0.5",
    "connected-react-router": "^6.5.2",
    "draft-js": "^0.11.0",
    "file-saver": "^2.0.2",
    "fs-jetpack": "^2.2.2",
    "immer": "^4.0.0",
    "immutable": "^4.0.0-rc.12",
    "jszip": "^3.2.2",
    "normalize.css": "^8.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.0.1",
    "slate": "^0.47.8",
    "slate-react": "^0.22.8"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.6.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "cross-env": "^6.0.0",
    "css-loader": "^3.2.0",
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0",
    "electron-mocha": "^8.1.2",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-standard": "^4.0.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^6.2.0",
    "react-hot-loader": "^4.12.13",
    "source-map-support": "^0.5.13",
    "spectron": "^8.0.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.2.2"
  }
}
